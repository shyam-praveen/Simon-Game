<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/score2.css">
    <title>Simon LeaderBoard</title>
</head>
<body>
  <div id="loader"></div>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">SIMON</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link glitch"  aria-current="page" href=<%= user %> >Back To Game</a>
              </li>
              <li class="nav-item">
                <a class="nav-link glitch" href="start">StartPage</a>
              </li>
              
            </ul>
          </div>
        </div>
      </nav>
      <div class="heading">
        <h1 class="headingh1 glitch">LeaderBoard</h1>
        <h3>Simon Game Kings</h3>
      </div>
<div class="main">

    
<div class="center">
    <% let rank = 1 %>
    <div class="top3">
    
    <% scores.every(function(gamer){ %>
        <% if(rank === 2){ %>
            <div class="two item">
                <div class="pos">
                  2
                </div>
                <div class="pic" style="background-image: url(&#39;https://ui-avatars.com/api/?name=<%= gamer.name %>&background=random&#39;)"></div>
                <div class="name">
                    <%= gamer.name %>
                </div>
                <div class="score">
                    <%= gamer.MaxScore %>
                </div>
              </div>
          <%} %>
          <% rank++; %>
        <% if(rank === 3){ return false;} %>
        <% return true; %>
    <%   }) %>

    <% rank = 1 %>
              
    <% scores.every(function(gamer){ %>
        <%  if(rank === 1){ %>
            <div class="one item">
                <div class="pos">
                  <%= rank %>
                </div>
                <div class="pic" style="background-image: url(&#39;https://ui-avatars.com/api/?name=<%= gamer.name %>&background=random&#39;)"></div>
                <div class="name">
                  <%= gamer.name %>
                </div>
                <div class="score">
                    <%= gamer.MaxScore %>
                </div>
              </div>

          <%}else if(rank === 3){ %>
            <div class="three item">
                <div class="pos">
                  3
                </div>
                <div class="pic" style="background-image: url(&#39;https://ui-avatars.com/api/?name=<%= gamer.name %>&background=random&#39;)"></div>
                <div class="name">
                    <%= gamer.name %>
                </div>
                <div class="score">
                    <%= gamer.MaxScore %>
                </div>
              </div>
          <%} %>
          <% rank++; %>
          <% if(rank === 4){ return false;} %>
          <% return true; %>
    <%   }) %>
    </div>
    <div class="list">
    <% scores.every(function(gamer){ %>
        <div class="item">
            <div class="pos">
              <%= rank %>
            </div>
            <div class="pic" style="background-image: url(&#39;https://ui-avatars.com/api/?name=<%= gamer.name %>&background=random&#39;)"></div>
            <div class="name">
                <%= gamer.name %>
            </div>
            <div class="score">
                <%= gamer.MaxScore %>
            </div>
        </div>

        <% rank++; %>

        <% if(rank === 11){ return false;} %>
        <% return true; %>
    <%   }) %>
    </div>
    
  </div>
</div>

  <script
  src="https://code.jquery.com/jquery-3.6.0.js"
  integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
  crossorigin="anonymous"></script>
  <script src="js/score2.js"></script>

</body>
</html>